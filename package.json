{
  "name": "template-project",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "base": "NODE_PATH=. node",
    "start:dev": "NODE_ENV=dev pm2 start ecosystem.config.js --env dev && pm2 logs app --raw | pino-pretty",
    "start:prod": "NODE_ENV=prod pm2 start ecosystem.config.js --env prod && pm2 logs app --raw",
    "stop:dev": "pm2 stop ecosystem.config.js --env",
    "init-version": "npm run base scriptJS/initVersion.js | pino-pretty",
    "lint": "npx eslint --fix --ignore-path .gitignore . ",
    "doc": "npx apidoc -i app/ -i apidoc/ -o static/apidoc "
  },
  "dependencies": {
    "apidoc": "^0.51.1",
    "cors": "^2.8.5",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "lodash": "^4.17.21",
    "pino": "^7.11.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "apidoc": {
    "name": "template-project",
    "version": "1.0.0",
    "description": "api document of template project",
    "title": "template-project",
    "template": {
      "withCompare": true,
      "forceLanguage": "en"
    }
  }
}